<!ELEMENT config		(jsonpath, dispatch*)>

<!ELEMENT jsonpath		(#PCDATA)>

<!ELEMENT dispatch		(twitter*, bitly?)?>
<!ATTLIST dispatch name		CDATA #REQUIRED>

<!ELEMENT twitter		(#PCDATA)>
<!ATTLIST twitter login		CDATA #REQUIRED>
<!ATTLIST twitter password	CDATA #REQUIRED>

<!ELEMENT bitly			(#PCDATA)>
<!ATTLIST bitly login		CDATA #REQUIRED>
<!ATTLIST bitly apikey		CDATA #REQUIRED>
